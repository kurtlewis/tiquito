            tr
                td#Ticketid 
                    h3#TicketIdSpot Ticket:
                td
                td#TicketTitle
                    h3 Title:
        div.sep
        div#firstdiv

        table#fancytable
            tr#headingTr
                th First Name
                th Location at the Hackerspace
                th Ticket Status
